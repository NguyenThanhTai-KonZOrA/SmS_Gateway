<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Warn"
      internalLogFile="${basedir}/Logs/internal-nlog.txt">

	<extensions>
		<add assembly="NLog.Web.AspNetCore" />
	</extensions>

	<!-- Define directories -->
	<variable name="logDir" value="${basedir}/Logs" />
	<variable name="archiveDir" value="${basedir}/Logs/Archived" />

	<targets>
		<!-- Console output -->
		<target xsi:type="Console" name="console"
				layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=ToString}" />

		<!-- Daily file logs -->
		<target xsi:type="File" name="logfile"
				fileName="${logDir}/SmsGateway.API_${shortdate}.log"
				archiveFileName="${archiveDir}/SmsGateway.API_{#}.log"
				archiveEvery="Day"
				archiveNumbering="Rolling"
				maxArchiveFiles="7"
				encoding="utf-8"
				createDirs="true"
				layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=ToString}" />
	</targets>

	<!-- ✅ Correct rules section -->
	<rules>
		<!-- Suppress framework noise -->
		<logger name="Microsoft.*" maxlevel="Info" final="true" />
		<logger name="System.*" maxlevel="Info" final="true" />

		<!-- Capture your application logs -->
		<logger name="SmsGateway.API.*" minlevel="Info" writeTo="logfile,console" />
		<logger name="*" minlevel="Info" writeTo="logfile,console" />
	</rules>
</nlog>
